# Docker Configuration
DOCKER_REGISTRY=local
VERSION=latest
PYTHON_VERSION=3.11

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# PostgreSQL Database Configuration
DATABASE_URL=postgres://tnb_user:tnb_password@localhost:5432/tnb_exchange
POSTGRES_DB=tnb_exchange
POSTGRES_USER=tnb_user
POSTGRES_PASSWORD=tnb_password
POSTGRES_PORT=5432

# Redis/Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_LOG_LEVEL=info
CELERY_CONCURRENCY=4
REDIS_PORT=6379

# Bot API Credentials (configure per-bot in database for production)
RANDYS_USERNAME=your_username
RANDYS_PASSWORD=your_password

# Logging
DJANGO_LOG_LEVEL=INFO

# Flower Monitoring
FLOWER_USER=admin
FLOWER_PASSWORD=change-this-password
FLOWER_PORT=5555

# Port Configuration
WEB_PORT=8000

# Security Settings (for production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True